@model ShopDGHouse.Models.Promotion
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/promotions" class="nav-link">Promotions</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Thêm mới</a>
        </li>
    </ul>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm mới Promotions</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/promotions">Promotions</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin thêm mới Promotions</h3>

        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Add", "Promotions", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <!-- your steps content here -->
                    <div class="card">
                        <div class="card-header p-2">
                            <ul class="nav nav-pills">
                                <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Thông tin chung</a></li>
                                @*<li class="nav-item"><a class="nav-link" href="#settings" data-toggle="tab">Khuyến mại</a></li>*@
                            </ul>
                        </div>
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="tab-pane active" id="activity">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Tên khuyến mãi</label>
                                        @Html.TextBoxFor(x => x.ProName, new { @class = "form-control", @placeholder = "Tên khuyến mãi" })
                                        @Html.ValidationMessageFor(x => x.ProName, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Ngày bắt đầu</label>
                                        @Html.TextBoxFor(x => x.FromDate, "{0:yyyy-MM-dd HH:mm}", new { @class = "form-control", @placeholder = "Ngày bắt đầu", @type = "datetime-local" })
                                        @Html.ValidationMessageFor(x => x.FromDate, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Ngày kết thúc</label>
                                        @Html.TextBoxFor(x => x.ToDate, "{0:yyyy-MM-dd HH:mm}", new { @class = "form-control", @placeholder = "Ngày kết thúc", @type = "datetime-local" })
                                        @Html.ValidationMessageFor(x => x.ToDate, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.ApplyForAll, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            <div class="checkbox">
                                                @Html.EditorFor(model => model.ApplyForAll)
                                                @Html.ValidationMessageFor(model => model.ApplyForAll, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Khuyến mại(%)</label>
                                        @Html.TextBoxFor(x => x.DiscountPercent, new { @class = "form-control", @placeholder = "khuyến mãi theo %", @type = "number" })
                                        @Html.ValidationMessageFor(x => x.DiscountPercent, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Khuyến mại($)</label>
                                        @Html.TextBoxFor(x => x.DiscountAmount, new { @class = "form-control", @placeholder = "khuyến mại theo tiền", @type = "number" })
                                        @Html.ValidationMessageFor(x => x.DiscountAmount, null, new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Chọn Thương Hiệu</label>
                                        @Html.DropDownList("BrandId", null, "Thương hiệu", htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.BrandId, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Chọn Sản phẩm</label>
                                        @Html.DropDownList("ProductId", null, "Sản phẩm", htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.ProductId, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Active, htmlAttributes: new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            <div class="checkbox">
                                                @Html.EditorFor(model => model.Active)
                                                @Html.ValidationMessageFor(model => model.Active, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.tab-pane -->
                            </div>
                            <div class="row">
                                <div class="col-2">
                                    <a href="/admin/promotions" class="btn btn btn-danger">Quay lại</a>
                                    <button type="submit" class="btn btn btn-success">Thêm</button>
                                </div>
                            </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                }
            </div>
        </div>
        @if (ViewBag.ErPr != null)
        {
            <div class="alert alert-danger">@ViewBag.ErPr</div>
        }
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
@section scripts{
    <script>
        $(document).ready(function () {
            CKEDITOR.replace('txtDetail', {
                customConfig: '/Content/ckeditor/config.js',
                extraAllowedContent: 'span',
            });
        });
        }
    </script>

}






