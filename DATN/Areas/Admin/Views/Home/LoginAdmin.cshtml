@model ShopDGHouse.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title>LoginAdmin</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="~/Content/assets_admin/images/icons/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="~/Content/assets_admin/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets_admin/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets_admin/fonts/iconic/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets_admin/vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets_admin/vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets_admin/vendor/animsition/css/animsition.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets_admin/vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets_admin/vendor/daterangepicker/daterangepicker.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets_admin/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets_admin/css/main.css">
</head>
<body>
    @*background-image: url('~/Content/assets_admin/images/gx1.jpg');*@
    <div class="limiter">
        <div class="container-login100" style="background-image: src('~/Content/assets_admin/images/gx1.jpg') ">
            <div class="wrap-login100">
                @using (Html.BeginForm("LoginAdmin", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <form class="login100-form validate-form">
                        <span class="login100-form-logo">
                            <i class="zmdi zmdi-landscape"></i>
                        </span>
                        <span class="login100-form-title p-b-34 p-t-27">
                            Log in
                        </span>

                        <div class="wrap-input100 validate-input" data-validate="Enter username">
                            <input class="input100" type="text" name="Username" placeholder="Username">
                            <span class="focus-input100" data-placeholder="&#xf207;"></span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Enter password">
                            <input class="input100" type="password" name="Password" placeholder="Password">
                            <span class="focus-input100" data-placeholder="&#xf191;"></span>
                        </div>

                        <div class="contact100-form-checkbox">
                            <input class="input-checkbox100" id="ckb1" type="checkbox" @*name="remember-me"*@>
                            <label class="label-checkbox100" for="ckb1">
                                Remember me
                            </label>
                        </div>

                        <div class="container-login100-form-btn">
                            <button class="login100-form-btn" type="submit">
                                Login
                            </button>
                        </div>
                    </form>
                }
                @if (ViewBag.error != null)
                {
                    <br />
                    <div class="alert alert-danger" role="alert" style="color:red">@ViewBag.error</div>
                }

            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>

    <script src="~/Content/assets_admin/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/Content/assets_admin/vendor/animsition/js/animsition.min.js"></script>
    <script src="~/Content/assets_admin/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/assets_admin/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/assets_admin/vendor/select2/select2.min.js"></script>
    <script src="~/Content/assets_admin/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Content/assets_admin/vendor/daterangepicker/daterangepicker.js"></script>
    <script src="~/Content/assets_admin/vendor/countdowntime/countdowntime.js"></script>
    <script src="~/Content/assets_admin/js/main.js"></script>
</body>
</html>
