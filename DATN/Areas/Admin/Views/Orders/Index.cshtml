@model PagedList.PagedList<ShopDGHouse.Models.Order>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản lí Orders";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/orders" class="nav-link">Orders</a>
        </li>
    </ul>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lí Đơn hàng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Orders</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách Đơn hàng</h3>

            <div class="card-tools">
                <a href="/admin/orders/add" class="btn btn-primary">Thêm mới</a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    @using (Html.BeginForm("Index", "Orders", FormMethod.Get, new { }))
                    {
                        <div class="input-group input-group-sm">
                            @Html.TextBox("Searchtext"@*new {@class="form-control"}*@)
                            <span class="input-group-append">
                                <button type="submit" class="btn btn-info btn-flat">Tim kiếm</button>
                            </span>
                        </div>
                    }
                </div>
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>STT</th>
                        @*<th>Tài khoản</th>*@
                        <th>Ngày đặt hàng</th>
                        <th>Khách hàng</th>
                        <th>Address</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Payment</th>
                        <th>Xác nhận</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                        foreach (var item in Model)
                        {
                    <tr id="trow_@item.Id">
                        <td>@i</td>
                        @*<td>@Html.DisplayFor(s => item.User.Username)</td>*@
                        <td>@Html.DisplayFor(s => item.OrderDate)</td>
                        <td>@item.CustomerName</td>
                        <td>@item.Address</td>
                        <td>@item.Email</td>
                        <td>@item.Phone</td>
                        <td>@item.Payment.PayName</td>
                        @if (item.Status == true)
                        {
                            <td>Đã xác nhận</td>
                        }
                        else
                        {
                            <td>Chờ xác nhận</td>
                        }
                        @if (item.Status == false)
                        {
                            <td>
                                <a href="/admin/orders/details/@item.Id" class="btn btn-sm btn-success">DT</a>
                                <a href="/admin/orders/edit/@item.Id" class="btn btn-sm btn-warning">UP</a>
                                @*<a href="" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete">DEL</a>*@
                            </td>
                        }
                        else
                        {
                            <td>
                                <a href="/admin/orders/details/@item.Id" class="btn btn-sm btn-success">DT</a>
                                @*<a href="/admin/orders/edit/@item.Id" class="btn btn-sm btn-warning">UP</a>*@
                                <a href="#" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete">DEL</a>
                            </td>
                        }
                    </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có bản ghi nào!</td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
@section scripts
{
    <script>
        $(document).ready(function () {
            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data("id");
                var conf = confirm('Bạn có muốn xóa bản ghi này không?');
                if (conf === true) {
                    $.ajax({
                        url: '/admin/orders/delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                            }
                        }
                    });
                }
            });
        });
    </script>
}


