@model PagedList.PagedList<ShopDGHouse.Models.Product>
@using PagedList;
@using PagedList.Mvc;
@using ShopDGHouse.Models;

@{
    ViewBag.Title = "Quản lí Products";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    DoAn db = new DoAn();
}


@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/products" class="nav-link">Products</a>
        </li>
    </ul>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý Sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/home">Home</a></li>
                    <li class="breadcrumb-item active">Products</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách Sản phẩm</h3>

            <div class="card-tools">
                <a href="/admin/products/add" class="btn btn-primary">Thêm mới</a>
                @*<a href="#" class="btn btn-danger" id="BtnDeleteAll">XóaALL</a>*@
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    @using (Html.BeginForm("Index", "Products", FormMethod.Get, new { }))
                    {
                        <div class="input-group input-group-sm">
                            @Html.TextBox("Searchtext")
                            <span class="input-group-append">
                                <button type="submit" class="btn btn-info btn-flat">Tim kiếm</button>
                            </span>
                        </div>
                    }
                </div>
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        @*<th><input type="checkbox" id="SelectAll" /></th>*@
                        <th>STT</th>
                        <th>Hình ảnh</th>
                        <th>Tên SP</th>
                        <th>Danh mục</th>
                        <th>Thương Hiệu</th>
                        <th>Xuất xứ</th>
                        <th>Số lượng</th>
                        <th>Giá</th>
                        <th>TGPH</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                        foreach (var item in Model)
                        {
                            var anh = db.ProductImages.Where(s => s.ProductId == item.Id).Select(s => s).ToList();
                            <tr id="trow_@item.Id">
                                @*<td><input type="checkbox" class="cbkItem" value="@item.MaKM" /></td>*@
                                <td>@i</td>
                                <td>
                                    @foreach (var obj in anh)
                                    {
                                        if (obj.IsDefault == true)
                                        {
                                            string ImagePath = "~/wwwroot/ImageProducts/" + obj.ImagePath;
                                            <img src="@Url.Content(ImagePath)" class="img img-thumbnail" width="50" height="50" @*alt="@obj.Caption" title="@obj.Caption"*@ />
                                        }

                                    }
                                </td>
                                <td>@item.ProductName</td>
                                <td>@item.Category.CategoryName</td>
                                <td>@item.Brand.NameBrands</td>
                                <td>@item.Origin</td>
                                <td>@item.Quantity</td>
                                <td>@item.Price</td>
                                @*<td>@item.TGPH</td>*@
                                <td>@Html.DisplayFor(s =>item.TGPH)</td>
                                <td>
                                    <a href="/admin/products/edit/@item.Id" class="btn btn-sm btn-warning">Sửa</a>
                                    <a href="/admin/products" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete">Xóa</a>
                                </td>
                            </tr>
                            i++;

                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Khong co ban ghi nao</td>
                        </tr>

                    }
                </tbody>
            </table>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
@section scripts
{
    <script>
        $(document).ready(function () {
            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data("id");
                var conf = confirm('Bạn có muốn xóa bản ghi này không?');
                if (conf === true) {
                    $.ajax({
                        url: '/admin/products/delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                            }
                        }
                    });
                }
            });
        });
    </script>
}

