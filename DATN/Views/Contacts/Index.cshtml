@model ShopDGHouse.Models.Contact
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="/home"><i class="fa fa-home"></i> Trang chủ</a>
                    <span>Liên hệ</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Contact Section Begin -->
<section class="contact spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="contact__content">
                    <div class="contact__address">
                        <h5>THÔNG TIN LIÊN HỆ</h5>
                        <ul>
                            <li>
                                <h6><i class="fa fa-map-marker"></i> Địa Chỉ</h6>
                                <p>46 Xuân Phương , quận Nam Từ Liêm, Hà Nội</p>
                            </li>
                            <li>
                                <h6><i class="fa fa-phone"></i> Số Điện Thoại</h6>
                                <p><span>+84189456653</span><span>+84332967513</span></p>
                            </li>
                            <li>
                                <h6><i class="fa fa-headphones"></i> Email Hỗ Trợ</h6>
                                <p>buitrungduc1903@gmail.com</p>
                            </li>
                        </ul>
                    </div>
                    <div class="contact__form">
                        @*@Html.Action("Partial_Contact","Contacts")*@
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <h5>Gửi Liên Hệ</h5>
                            <input type="text" placeholder="Tên" required name="CtName">
                            <input type="email" placeholder="Email" required name="Email">
                            <input type="number" placeholder="Số điện thoại" required name="Phone">
                            <input type="text" placeholder="Địa chỉ" required name="Address">
                            <textarea placeholder="Nội dung" required name="Content"></textarea>
                            <button type="submit" class="site-btn">Gửi thông tin</button>

                        }
                    </div>
                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-danger">Chúng tôi đã nhận được thông tin.quay về <a href="/home">TRANG CHỦ</a></div>
                    }
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="contact__map">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d48158.305462977965!2d-74.13283844036356!3d41.02757295168286!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c2e440473470d7%3A0xcaf503ca2ee57958!2sSaddle%20River%2C%20NJ%2007458%2C%20USA!5e0!3m2!1sen!2sbd!4v1575917275626!5m2!1sen!2sbd"
                            height="780" style="border:0" allowfullscreen="">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</section>
