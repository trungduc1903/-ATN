@model ShopDGHouse.Models.Brand
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string ImagePath = "~/wwwroot/ImageBrands/" + Model.ImageBrands;
}
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="/home"><i class="fa fa-home"></i> Home</a>
                    <a href="/brands">Thương Hiệu</a>
                    <span>@Model.NameBrands</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Blog Details Section Begin -->
<section class="blog-details spad">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="blog__details__content">
                    <div class="blog__details__item">
                        <img src="@Url.Content(ImagePath)" alt="">
                        <div class="blog__details__item__title">
                            <span class="tip">Thông tin</span>
                            <h4>@Model.NameBrands</h4>
                            <ul>
                                <li style="font-weight:bold">Trụ sở chính:<span>@Model.Address</span></li>
                                <li style="font-weight:bold">Chi nhánh:@Model.ChiNhanh</li>
                                @*<li>39 Comments</li>*@
                            </ul>
                        </div>
                    </div>
                    <div class="blog__details__desc">
                        <p>
                            @Html.Raw(Model.Describe)
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

